{
  "name": "auditor-action-core",
  "version": "0.0.0",
  "private": true,
  "description": "The Auditor Core",
  "main": "lib/main.js",
  "type": "module",
  "scripts": {
    "format": "prettier --write '**/*.js'",
    "format-check": "prettier --check '**/*.js'",
    "lint": "eslint src/**/*.js",
    "package": "NODE_OPTIONS=--openssl-legacy-provider ncc build src/main.js -o dist --source-map --license licenses.txt",
    "all": "npm run format && npm run lint && npm run package",
    "bundle": "npm run format && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GrantBirki/auditor.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Grant Birkinbine",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.1",
    "dedent-js": "^1.0.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.17.9",
    "@types/node": "^16.10.5",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^7.32.0",
    "prettier": "2.5.1"
  }
}
